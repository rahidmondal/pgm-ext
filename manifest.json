{
    "manifest_version" : 3,
    "name" : "PGM Extension",
    "description" : "Password Generator and Strength Checker",
    "version" : "0.2.1",
    "action": {
        "default_icon": {
            "16": "src/resources/logo16.png",
            "48": "src/resources/logo48.png",
            "128": "src/resources/logo128.png"
        }
    },
    "side_panel" : {
        "default_path" : "src/index.html"
    },
    "permissions" : ["sidePanel", "storage"], 
    "icons": {
        "16": "src/resources/logo16.png",
        "48": "src/resources/logo48.png",
        "128": "src/resources/logo128.png"
    }
}